          <script>
      

      var points 
      axios.get('/home/point')
    .then((responseArr ) => {
    
      let point = responseArr.data
    
      
       points =  (point[0].point).toFixed(0);
       document.getElementById("pointshow").innerHTML = points + " points ="+((points/100)*0.1).toFixed(2) + "SR" ;
    
